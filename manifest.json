{
    "manifest_version": 2,
    "name": "Analytic Highlighter",
    "version": "1.0",
    "description":"Utilize NLP to analyze user selected paragraph to extract and highlight key words in the webpage.",
    "content_scripts": [
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["content.js"]
        }
    ],
    "permissions":["tabs"],
    "background" : {
        "scripts":["background.js"]
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    }
}