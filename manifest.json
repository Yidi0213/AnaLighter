{
    "manifest_version": 2,
    "name": "Analytic Highlighter",
    "version": "2.0",
    "description":"Utilize NLP to analyze user selected paragraph to extract and highlight key words in the webpage.",
    "content_scripts": [
        {
            "matches":[
                "http://*/*",
                "https://*/*"
            ],
            "js":["content.js"]
        }
    ],
    "permissions":[],
    "background" : {
        "scripts":["background.js"]
    },
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    },
    "icons": { "16": "logo16.png",
        "48": "logo48.png",
       "128": "logo128.png" }

}